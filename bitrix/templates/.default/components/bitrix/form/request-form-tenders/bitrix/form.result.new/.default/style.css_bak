.formTender .form-group textarea {
	box-sizing: border-box;
	display: block;
	width: 100%;
	height: 60px;
	border: 0;
	padding: 20px;
	font-size: 16px;
	background-color: #FFF;
	resize: none;
	border-radius: 6px;
	height:190px
}

.formTender .form-group input {
	box-sizing: border-box;
	display: block;
	width: 100%;
	height: 60px;
	border: 0;
	padding-left: 20px;
	font-size: 16px;
	background-color: #FFF;
	border-radius: 6px;
}